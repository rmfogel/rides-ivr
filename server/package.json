{
  "name": "rides-ivr-server",
  "version": "0.1.0",
  "private": true,
  "description": "Twilio IVR server for closed-community ride matching",
  "main": "start.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node start.js",
    "dev": "nodemon --watch src --ext js --exec node src/app.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "tts:he": "node scripts/tts-generate.js --lang he",
    "tts:he:dry": "node scripts/tts-generate.js --lang he --dry-run",
    "audio:generate": "node scripts/generate-audio.js",
    "audio:regenerate": "node scripts/generate-audio.js --regenerate",
    "audio:test": "node scripts/generate-audio.js --test",
    "audio:voices": "node scripts/generate-audio.js --list-voices"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.645.0",
    "@google-cloud/text-to-speech": "^6.3.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "fs-extra": "^11.2.0",
    "luxon": "^3.5.0",
    "mongodb": "^6.9.0",
    "twilio": "^5.3.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
